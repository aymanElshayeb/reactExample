{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run All Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/react-scripts",
            "args": ["test", "--watchAll=false", "--verbose"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"],
            "env": {
                "CI": "true"
            }
        },
        {
            "name": "Run Tests in Watch Mode",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/react-scripts",
            "args": ["test"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Run Tasks Component Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/react-scripts",
            "args": ["test", "--testPathPattern=tasks.test.tsx", "--watchAll=false", "--verbose"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"],
            "env": {
                "CI": "true"
            }
        },
        {
            "name": "Debug Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/react-scripts",
            "args": ["test", "--runInBand", "--no-cache", "--watchAll=false"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"],
            "env": {
                "CI": "true"
            },
            "runtimeArgs": ["--inspect-brk"]
        },
        {
            "name": "Run Single Test File",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/react-scripts",
            "args": ["test", "${relativeFile}", "--watchAll=false", "--verbose"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"],
            "env": {
                "CI": "true"
            }
        }
    ]
}